server {
    listen 80;
    server_name cariaestates.com www.cariaestates.com 69.62.114.46;

    client_max_body_size 50M;

    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;

    # 1. BACKEND UPLOADS
    location /static/uploads/ {
        alias /var/www/caria/backend/static/uploads/;
        expires 30d;
        add_header Cache-Control "public, immutable";
        add_header Access-Control-Allow-Origin "*";
        try_files $uri =404;
    }

    # 2. API PROXY
    location /api {
        proxy_pass http://127.0.0.1:8000;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
        proxy_buffering off;
        client_max_body_size 50M;
    }

    # 3. ESTATEOS ADMIN - New Admin Panel (SPA)
    location /estateos-admin {
        root /var/www/caria/frontend/build;
        index index.html;
        try_files $uri $uri/ /index.html;
    }

    # 4. OLD ADMIN (Horizon) - Will be removed later
    location ^~ /admin/static/ {
        alias /var/www/caria/admin/static/;
        expires 1y;
        add_header Cache-Control "public, immutable";
        try_files $uri =404;
    }

    location /admin {
        root /var/www/caria;
        index index.html;
        try_files $uri $uri/ /admin/index.html;
    }

    # 5. MAIN FRONTEND
    location / {
        root /var/www/caria/frontend/build;
        index index.html;
        try_files $uri $uri/ /index.html;
    }

    error_page 500 502 503 504 /50x.html;
    location = /50x.html {
        root /usr/share/nginx/html;
    }
}
